{
    "name": "react-resume",
    "version": "0.1.0",
    "private": true,
    "homepage": ".",
    "engines": {
        "node": ">=18.18.0"
    },
    "scripts": {
        "build:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind.generated.css --minify",
        "watch:tailwind": "tailwindcss -i ./src/tailwind.css -o ./src/tailwind.generated.css --watch",
        "start": "run-p watch:tailwind start:react",
        "start:react": "react-scripts start",
        "prebuild": "npm run build:tailwind",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "generate-pdf": "node ci/pdf-generator.js",
        "lint": "eslint -c .eslintrc.js --ext .tsx,ts src --fix"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "eslintIgnore": [
        ".eslintrc.js",
        "pdf-generator.js",
        "tailwind.config.js"
    ],
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.12.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "@types/react": "^18.2.61",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsdoc": "^46.9.1",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-react": "^7.33.2",
        "npm-run-all": "^4.1.5",
        "postcss-preset-env": "^9.4.0",
        "prettier": "^3.2.5",
        "puppeteer": "^24.23.0",
        "react-scripts": "^5.0.1",
        "tailwindcss": "^3.4.15",
        "typescript": "^4.9.5"
    }
}
